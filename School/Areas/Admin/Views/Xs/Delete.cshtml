@model School.Models.ActivitySet

@{
    ViewBag.Title = "学术活动";
}

<h2>学术活动</h2>

<h3>你确定要删除吗</h3>
<fieldset>
    <legend>学术活动</legend>

    <div class="display-label">标题</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>

    <div class="display-label">正文</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Content)
    </div>


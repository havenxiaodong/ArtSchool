@model IEnumerable<School.Models.NewsSet>

@{
    ViewBag.Title = "新闻管理";
}

<h2>新闻管理</h2>
    <h3>未审核新闻列表</h3>
<table>
    <tr>
        <th>
            标题
        </th>
        <th>
            栏目
        </th>
        <th>
            类别
        </th>
        <th>
            时间
        </th>
        <th>
            作者
        </th>
        <th>
            是否通过审核
        </th>
        <th>
            正文
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.classid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kind)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Writer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Checked)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.ActionLink("审核", "Check", new { id=item.ID }) |
            @Html.ActionLink("详情", "Details", new { id=item.ID }) |
            @Html.ActionLink("删除", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

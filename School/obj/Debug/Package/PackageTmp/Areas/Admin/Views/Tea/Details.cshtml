@model School.Models.TeaTeamSet

@{
    ViewBag.Title = "师资队伍管理";
}

<h2>师资队伍管理</h2>

<fieldset>
    <legend>教师信息</legend>

    <div class="display-label">姓名</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.name)
    </div>

    <div class="display-label">职称</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.job)
    </div>

        <div class="display-label">系别</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.kind)
    </div>
    <div class="display-label">介绍</div>
    <div class="display-field">
        @Html.Raw(@Model.introduce)
    </div>

    <div class="display-label">照片</div>
    <div class="display-field">
        @Html.Raw(@Model.photo)
    </div>
</fieldset>
<p>
    @Html.ActionLink("编辑", "Edit", new { id=Model.ID }) |
    @Html.ActionLink("返回列表", "List")
</p>

@model PagedList<School.Models.TeaTeamSet>
@using Webdiyer.WebControls.Mvc
@{
    Layout = "~/Views/Shared/_TeaList.cshtml";
}
<div class="content ">
            <p class="title fl"><a href="@Url.Action("_Tealist1","TeaTeam")">艺术设计</a></p>
            <p class="title fl"><a href="@Url.Action("_Tealist2","TeaTeam")">工业设计</a></p>
